@page "/game/{Id:guid}"
@layout EmptyLayout


<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">@QuizDetailModel.Title</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Creator will start this quiz any soon......</p>
    </div>
    <div class="flex flex-wrap -m-2">
      @foreach(var user in QuizDetailModel.Users){
        <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
          <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
            <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" 
                 src="@(user.User.ImageUrl ?? "https://ui-avatars.com/api/?name="+@user.User.Name)">
            <div class="flex-grow">
              <h2 class="text-gray-900 title-font font-medium">@user.User.Name</h2>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</section>



