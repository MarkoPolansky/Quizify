@page "/game/{Id:guid}/user/{UserId:guid}/results"
@layout MainLayout

<section class="">
      <div class="flex flex-row text-center align-items-center justify-content-center">
                   <div class="bg-white p-4 ">
                       <h1 class="text-3xl text-start  bold title-font  ">Your points: @UserPoints / @TotalPoints </h1>
                   </div>
               </div>
    @foreach (var question in Questions)
    {
        <div>
            <div class="flex flex-row text-center    p-6 align-items-center justify-content-center">
                <div class="bg-white p-4 flex flex-row  ">
                    <h1 class="text-3xl text-start  bold title-font mb-4 ">@question.Text </h1>
                    <h3 class="text-sm ml-4  text-gray-700 italic">@GetRecivedPointsForQuestion(question) / @question.Points</h3>
                </div>
            </div>
            <div class="flex flex-wrap sm:px-24 -m-2">
                @foreach (var answer in question.Answers)
                {

                    <div class=" bg-white p-2 hover:bg-green-400 lg:w-1/2 md:w-1/3 w-full ">
                        <div class=" @((answer.IsCorrect && IsAnswerPicked(answer)) ? "bg-green-400" : "")   @((!answer.IsCorrect && IsAnswerPicked(answer)) ? "bg-red-400" : "") @((answer.IsCorrect && !IsAnswerPicked(answer)) ? "border-red-400" : "border-gray-200")  h-full cursor-pointer flex   items-center  border-2 p-4 rounded-lg">
                            <div class="flex-grow">
                                <h2 class="text-gray-900 title-font font-medium">@answer.Text </h2>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

</section>





